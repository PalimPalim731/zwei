<p>Login</p>
<%= form_for @user, controller: 'authentication', action: 'sign_in' %>
  <p>
    <%= f.label 'email:' %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label 'password:' %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit 'Sign In' %>&nbsp;&nbsp;&nbsp;
    <%= f.submit 'Clear Form', :type => 'reset' %>
  </p>
<% end %>
